<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Vision.UI.Views.DashboardView">
  <ScrollViewer>
    <Grid Margin="12" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*">
      <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                 Text="Dashboard"
                 FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

      <!-- Left / Right gaps -->
      <Border Grid.Row="1" Grid.Column="0" CornerRadius="12" Padding="12" Margin="0,0,8,8"
              BorderThickness="1" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
        <StackPanel Spacing="6">
          <TextBlock Text="Levá strana" FontWeight="Bold" FontSize="16"/>
          <TextBlock Text="{Binding LeftGapText}" FontSize="28"/>
          <TextBlock Text="{Binding LeftQualityText}" />
          <TextBlock Text="{Binding CamLeftText}" />
          <TextBlock Text="{Binding LastActionText}" />
          <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Left +" Command="{Binding ManualLeftPlusCommand}"/>
            <Button Content="Left -" Command="{Binding ManualLeftMinusCommand}"/>
          </StackPanel>
        </StackPanel>
      </Border>

      <Border Grid.Row="1" Grid.Column="1" CornerRadius="12" Padding="12" Margin="8,0,0,8"
              BorderThickness="1" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
        <StackPanel Spacing="6">
          <TextBlock Text="Pravá strana" FontWeight="Bold" FontSize="16"/>
          <TextBlock Text="{Binding RightGapText}" FontSize="28"/>
          <TextBlock Text="{Binding RightQualityText}" />
          <TextBlock Text="{Binding CamRightText}" />
          <TextBlock Text="{Binding LastActionText}" />
          <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Right +" Command="{Binding ManualRightPlusCommand}"/>
            <Button Content="Right -" Command="{Binding ManualRightMinusCommand}"/>
          </StackPanel>
        </StackPanel>
      </Border>

      <!-- PLC status -->
      <Border Grid.Row="2" Grid.ColumnSpan="2" CornerRadius="12" Padding="12" Margin="0,8,0,0"
              BorderThickness="1" BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
        <StackPanel Spacing="6">
          <TextBlock Text="PLC stav" FontWeight="Bold" FontSize="16"/>
              <TextBlock Text="{Binding PlcText}" FontFamily="Default"/>
            <WrapPanel>
                <TextBlock Margin="0,0,12,6" Text="{Binding PlcReadyText}"/>
                <TextBlock Margin="0,0,12,6" Text="{Binding PlcAckText}"/>
                <TextBlock Margin="0,0,12,6" Text="{Binding PlcBusyText}"/>
                <TextBlock Margin="0,0,12,6" Text="{Binding PlcDoneText}"/>
                <TextBlock Margin="0,0,12,6" Text="{Binding PlcNokText}"/>
                <TextBlock Margin="0,0,12,6" Text="{Binding PlcTimeoutText}"/>
                <TextBlock Margin="0,0,12,6" Text="{Binding PlcConflictText}"/>
            </WrapPanel>
        </StackPanel>
      </Border>
    </Grid>
  </ScrollViewer>
</UserControl>
