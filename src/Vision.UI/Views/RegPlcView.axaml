<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Vision.UI.Views.RegPlcView">
  <Grid Margin="12" RowDefinitions="Auto,*">
    <TextBlock Text="Regulace + PLC (placeholder) – sem přijde stavová logika + statistiky"
               FontSize="16" FontWeight="Bold"/>
    <TextBlock Grid.Row="1" Text="{Binding PlcText}" Margin="0,12,0,0" FontFamily="Consolas"/>
  </Grid>
</UserControl>
